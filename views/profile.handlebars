  <header class="page-title">
  <h2>Hello, {{name}}!</h2>
  </header>


<div class="new-post">
  {{!-- <div class="col-md-6"> --}}
    <center><h3>Create a New Post:</h3><center>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title"> <h5>title:</h5></label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content"><h5>content:</h5></label>
        <input class="form-input" type="text" id="post-content" name="post-content"></input>
      </div>
      <div class="form-group">
        <button class="post-btn" type="submit" class="btn btn-primary" id="post-btn">Post</button>
      </div>
    </form>
</div>

  {{#if post.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{project.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" id="delete-post-btn" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>




